{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "polyglot-ts": ["."]
    },
    "types": ["node", "jest"]
  }
}
